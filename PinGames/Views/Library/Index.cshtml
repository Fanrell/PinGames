<h1>Library</h1>
<div>
    @{
        var gameLibrary = ViewData["gameLibrary"] as List<GameLibraryModel>;
        var session = Context.Request.Cookies["UserLoginCookie"];
        var genres = ViewData["Genres"] as List<GenreModel>;
     }
    <form method="get" action="Library" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="Search" />
        <label for="genres">Choose a genre</label>
        <select id="genres" name="genre">
            <option value="">-</option>
            @foreach (var item in genres)
            {
                <option value="@item.Id">@item.GenreName</option>
            }
        </select>
        <button type="submit" class="btn-sm btn btn-dark">Confirm</button>

    </form>
    <table class="table">
        <tr class="">
            <td><h5>Cover</h5></td>
            <td><h5>Name</h5></td>
            <td><h5>Genre</h5></td>
            <td><h5>About</h5></td>
            <td></td>
        </tr>

        @foreach (var item in gameLibrary)
        {
            <tr>
                <td><img src="~/img/Game/@item.GameImg" class="w-50 h-50"> </td>
                <td><b><a class="text-dark" asp-controller="Profile" asp-action="Game" asp-route-gameId="@item.GameId">@item.GameName</a></b></td>
                <td>@item.GenreName</td>
                <td>@item.GameAbout.Substring(0, 200)</td>
                @if (session != null)
                {
                    <td><a class="btn btn-success text-center" style="border-radius:45%;" asp-area="" asp-controller="library" asp-action="GameToLibrary" asp-route-gameId="@item.GameId">&#43</a></td>
                }
            </tr>
        }

    </table>
</div>