@model PinGames.Models.RegisterUserModel
<div class="align-content-center">
    <script src="~/js/PasswordCheck.js"></script>
    <div class="align-bottom">
        <form method="post" , enctype="multipart/form-data">
            <p><input name="login" type="text" placeholder="Login" /></p>
            <p><input name="email" type="email" placeholder="E-mail" /></p>
            <p><input id="password" type="password" placeholder="Password"  /></p>
            <p><input id="repeatedPassword" type="password" placeholder="Repeat Password" onblur="passwordCheckSymbols()" /></p>
            <p id="errorMessage" style="color:red"></p>
            <p>
                <input id="submit" type="submit" value="Register" disabled class="btn btn-primary btn-light p-2 align-content-end" onclick="window.location.href = '@Url.Action("RegisterAction","Home")';" />
            </p>
        </form>
    </div>
</div>